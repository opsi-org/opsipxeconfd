#!/usr/bin/make -f
# -*- makefile -*-

clean:
	dh_testdir
	dh_testroot
	dh_clean
	rm -f debian/files || true
	
install:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	
	install -m 0755 opsipxeconfd debian/opsipxeconfd/usr/sbin/
	install -m 0644 files/opsipxeconfd.conf debian/opsipxeconfd/etc/opsi/
	
	dh_install

binary-indep: install
	dh_testdir -i
	dh_testroot -i
	dh_installdebconf
	dh_installlogrotate
	dh_installinit --init-script=opsipxeconfd -u"defaults 80 20"
	dh_installchangelogs -i
	dh_shlibdeps
	dh_md5sums
	dh_gencontrol
	dh_installdeb
	dh_builddeb

binary: binary-indep
build: binary
.PHONY: clean binary-indep binary install build

